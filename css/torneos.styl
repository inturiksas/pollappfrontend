amarillo_osc = #E1B800
morado = #2B1B4B

body
	width 100%
	height 100%
	background-image url('../img/fondos/480x800-android-menuinicio.png')

section
	font-size 14px
	height 75%	
	
	.torneos
		
		.torneo	
			display table
			padding .3em 0 .5em 0			
		
			.imagenTorneoUno
				display table-cell
				padding 0 .5em 0 0
				text-align right
				width 30%

			.nombreTorneoUno			
				color amarillo_osc
				display table-cell
				text-align left
				vertical-align middle
				width 60%				

			.imagenTorneoDos
				display table-cell
				padding 0 0 0 .5em				
				text-align left	
				width 30%			

			.nombreTorneoDos
				color amarillo_osc
				display table-cell				
				text-align right
				vertical-align middle
				width 60%
								
		a
			text-decoration none
		
		img
			border 5px amarillo_osc solid
			box-shadow 0 5px 0 rgba(0,0,0,0.2)
			border-radius 50%	
			height 50%			
			width 50%
			